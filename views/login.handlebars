<h5 class="welcome text-padding" id="faderSub">
  <span id="static">
    Welcome,
  </span>
  <br />
  <span id="typefield">
    Employee
  </span>
</h5>
<h6 class="welcome text-padding" id="faderPls">
  Please enter your login credentials:
</h6>
<div class="section"></div>

<div class="container">
  <div
    class="z-depth-1 grey lighten-4 row"
    style="display: inline-block; padding: 20px 60px 0px 60px; border: 1px solid #eeeeee;"
  >
    <form class="col s12" method="post" id="form">
      <div class="row">
        <div class="col s12">
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input class="validate" type="text" name="user" id="name-login" />
          <label for="name-login">Enter your username</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input
            class="validate"
            type="password"
            name="password"
            id="password-login"
          />
          <label for="password-login">Enter your password</label>
        </div>
      </div>

      <div class="row">
        <button
          id="button-text"
          type="submit"
          name="btn_login"
          class="col s12 btn btn-small waves-effect"
        >Login<i class="material-icons right">send</i></button>
      </div>
    </form>
  </div>
</div>
<script src="/js/login.js"></script>