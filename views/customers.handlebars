{{! Form Details: customer_first_name, customer_last_name, customer_phone, customer_email, dog_name }}
<h4>New Customer Registration</h4>
<br />
<br />
<div class="row">
  <form class="col s12" id="addCustomer">
    <div class="row">
      <div class="input-field col s6">
        <input id="first_name" type="text" class="" />
        <label for="first_name">First Name</label>
      </div>
      <div class="input-field col s6">
        <input id="last_name" type="text" class="" />
        <label for="last_name">Last Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="dog_name" type="text" class="" />
        <label for="dog_name">Dog's Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="email" type="email" class="validate" />
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="phone" type="tel" class="" />
        <label for="disabled">Phone (1 + Area Code + Phone)</label>
      </div>
    </div>
    <button
      id="button-text"
      style="margin: 10px auto 50px;"
      class="btn-small waves-effect waves-light"
      type="submit"
      name="action"
    >Submit
      <i class="material-icons right">send</i>
    </button>
  </form>
</div>
<br />

{{! Populate each registered customer }}
<h4>Current Customers</h4>
<br />
<ul class="collection">
  {{#each customers as |customer|}}
    <form method="delete" id="removeCustomer">
      <div class="col s12 m6">
        <li class="collection-item">
          <h4 class="" id="customer" value="{{customer_id}}"><strong>{{customer_first_name}}
              {{customer_last_name}}</strong></h4>
          <p>{{customer_phone}}
            <br />
            {{dog_name}}
          </p>
          <button
                class="btn waves-effect waves-light"
                type="submit"
                name="action"
              >Remove
                <i class="material-icons right">remove_circle</i>
        </li>
      </div>
    </form>
  {{/each}}
</ul>
<script src="/js/addCustomer.js"></script>